<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.Onboarding1Fragment">


    <ImageView
        android:id="@+id/onbarding1"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/mountain_scene"
        android:src="@drawable/onboarding1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539" />

    <ImageView
        android:id="@+id/onboarding1_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo_silhouette"
        android:src="@drawable/logo_silhouette"
        app:layout_constraintBottom_toTopOf="@+id/onboarding1_para"
        app:layout_constraintStart_toStartOf="@+id/onbarding1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onboarding1_sentimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/app_name_lower"
        android:textColor="@color/text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/onboarding1_logo"
        app:layout_constraintStart_toEndOf="@+id/onboarding1_logo"
        app:layout_constraintTop_toTopOf="@+id/onboarding1_logo" />

    <TextView
        android:id="@+id/onboarding1_para"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/first_screen_description"
        android:textColor="@color/text"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/onbarding1"
        app:layout_constraintTop_toTopOf="@+id/onbarding1" />

    <Button
        android:id="@+id/onboarding1_sign_up"
        android:layout_width="370dp"
        android:layout_height="66dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/sign_up_button"
        android:text="@string/onboarding_sign_up"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="@+id/onbarding1"
        app:layout_constraintEnd_toEndOf="@+id/onbarding1"
        app:layout_constraintStart_toStartOf="@+id/onbarding1" />

</androidx.constraintlayout.widget.ConstraintLayout>